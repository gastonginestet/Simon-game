<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="gastonginestet.simon.Juego">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:stretchColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/rojo"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:background="@color/rojoOscuro"
                android:onClick="presionaUnColor"></View>


            <View
                android:id="@+id/verde"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:background="@color/verdeOscuro"
                android:onClick="presionaUnColor" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/azul"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/azulOscuro"
                android:onClick="presionaUnColor" />


            <View
                android:id="@+id/amarillo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/amarilloOscuro"
                android:onClick="presionaUnColor" />


        </TableRow>


    </TableLayout>

</LinearLayout>




